#!/usr/bin/env ruby

if defined?(Gem)
  # Hack to make sure we don't run with RubyGems loaded.
  ENV['PRODUCTION'] = 'true'
  exec "#{File.expand_path(__FILE__)} #{ARGV.join(' ')}"
  
else
  # Run the normal operations.
  $:.unshift File.expand_path('../../lib', __FILE__)
  require 'microgem'
  
  Gem::Micro.run(ARGV)
end